#
# Powerline Double Green - Tmux Theme
# Created by Jim Myhrberg <contact@jimeh.me>.
#
# Inspired by vim-powerline: https://github.com/Lokaltog/powerline
#
# Requires terminal to be using a powerline compatible font, find one here:
# https://github.com/Lokaltog/powerline-fonts
#

# Status update interval
set -g status-interval 1

# Basic status bar colors
set -g status-fg colour245
set -g status-bg colour233

# Left side of status bar
set -g status-left-style bg=colour233
set -g status-left-style fg=colour243
set -g status-left-length 40
set -g status-left "#[fg=colour114,bg=colour240] #H #[fg=colour240,bg=colour235]#[fg=colour240,bg=colour235] #(whoami) #[fg=colour235,bg=colour233] #[fg=colour102,bg=colour233]#{sysstat_cpu} UP:#[fg=colour2,bg=colour233]#{uptime}"

# Right side of status bar
set -g status-right-style bg=colour233
set -g status-right-style fg=colour243
set -g status-right-length 150
set -g status-right "#{sysstat_mem} #{sysstat_swap} #[fg=colour235,bg=colour233]#[fg=colour240,bg=colour235] %H:%M:%S #[fg=colour240,bg=colour235]#[fg=colour114,bg=colour240] %d-%b-%y"

# Window status
set -g window-status-format " #I:#W "
set -g window-status-current-format " #I:#W "

# Current window status
set -g window-status-current-style bg=colour114
set -g window-status-current-style fg=colour226

# Window with activity status
set -g window-status-activity-style bg=colour245
set -g window-status-activity-style fg=colour233

# Window separator
set -g window-status-separator ""

# Window status alignment
set -g status-justify centre

# Pane border
set -g pane-border-style bg=default
set -g pane-border-style fg=colour235

# Active pane border
set -g pane-active-border-style bg=default
set -g pane-active-border-style fg=colour114

# Pane number indicator
set -g display-panes-colour colour233
set -g display-panes-active-colour colour245

# Clock mode
set -g clock-mode-colour colour114
set -g clock-mode-style 24

# Message
set -g message-style fg=colour114
set -g message-style bg=black

# Command message
set -g message-command-style bg=colour233
set -g message-command-style fg=black

# Mode
set -g mode-style bg=colour114
set -g mode-style fg=colour235
